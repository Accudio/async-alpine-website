{% macro card (data) %}
<li class="flex">
	<a
		class="flex items-center border-solid border-2 border-black rounded-[8px] w-full py-[.75rem] px-[1rem] no-underline"
		href="{{ data.url }}"
	>
		{% if data.emoji %}
			<span class="text-[2rem] mr-[1rem] w-[2rem] leading-none">{{ data.emoji }}</span>
		{% elif data.svg %}
			{% set svgContent %}{% include 'icons/' ~ data.svg ~ '.svg' %}{% endset %}
			{{ svgContent | replace('<svg', '<svg class="mr-[1rem] h-[2rem] w-[2rem]" aria-hidden="true"') | safe }}
		{% endif %}
		{{ data.title }}
	</a>
</li>
{% endmacro %}

