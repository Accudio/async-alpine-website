{% set title = title | default(config.title) %}
{% set description = description %}
{% set currentUrl = config.url + page.url %}

<title>{{ title }}</title>
<link rel="canonical" href="{{ currentUrl }}"/>

<link rel="apple-touch-icon" sizes="180x180" href="/meta/apple-touch-icon.png">
<link rel="icon" type="image/svg+xml" href="/meta/favicon.svg">
<link rel="icon" sizes="any" href="/meta/favicon.ico">
<link rel="manifest" href="/meta/site.webmanifest">
<link rel="mask-icon" href="/meta/safari-pinned-tab.svg" color="#668016">
<meta name="apple-mobile-web-app-title" content="Async Alpine">
<meta name="application-name" content="Async Alpine">
<meta name="msapplication-TileColor" content="#668016">
<meta name="msapplication-config" content="/meta/browserconfig.xml">
<meta name="theme-color" content="#668016">

<meta property="og:site_name" content="{{ config.title }}"/>
<meta property="og:title" content="{{ title }}"/>
<meta property="og:type" content="website"/>
<meta property="og:url" content="{{ currentUrl }}"/>
<meta property="twitter:url" content="{{ currentUrl }}"/>
<meta property="twitter:site" content="{{ config.title }}"/>

<meta name="description" content="{{ description }}"/>
<meta name="twitter:description" content="{{ description }}"/>
<meta property="og:description" content="{{ description }}"/>

<meta name="twitter:card" content="summary_large_image"/>
<meta name="twitter:creator" content="@{{ config.twitter }}"/>

{% set socialImage = socialImage | default('/meta/cover.jpg') %}
{% set socialImageAlt = socialImageAlt | default('Async Alpine - Code splitting and lazy-loading components for Alpine.js!') %}
<meta property="og:image" content="{{ config.url }}{{ socialImage }}"/>
<meta name="twitter:image" content="{{ config.url }}{{ socialImage }}"/>
<meta property="og:image:alt" content="{{ socialImageAlt }}"/>
<meta name="twitter:image:alt" content="{{ socialImageAlt }}"/>

{% if config.monetisation %}
  <meta name="monetization" content="{{ config.monetisation }}">
{% endif %}

<meta name="generator" content="{{ eleventy.generator }}">
