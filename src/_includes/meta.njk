{% set title = title | default(config.title) %}
{% set description = description %}
{% set currentUrl = config.url + page.url %}

<title>{{ pageTitle }}</title>
<link rel="canonical" href="{{ currentUrl }}"/>

<link rel="icon" type="image/svg+xml" href="/meta/favicon.svg">
<link rel="alternate icon" sizes="16x16" href="/meta/favicon.ico">
<link rel="apple-touch-icon" sizes="180x180" href="/meta/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="/meta/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="/meta/favicon-16x16.png">
<link rel="manifest" href="/meta/site.webmanifest">
<link rel="mask-icon" href="/meta/safari-pinned-tab.svg" color="#d2353a">
<meta name="msapplication-TileColor" content="#d2353a">
<meta name="theme-color" content="#fff2d7">

<meta property="og:site_name" content="{{ config.title }}"/>
<meta property="og:title" content="{{ title }}"/>
<meta property="og:type" content="website"/>
<meta property="og:url" content="{{ currentUrl }}"/>
<meta property="twitter:url" content="{{ currentUrl }}"/>
<meta property="twitter:site" content="{{ config.title }}"/>

<meta name="description" content="{{ description }}"/>
<meta name="twitter:description" content="{{ description }}"/>
<meta property="og:description" content="{{ description }}"/>

<meta name="twitter:card" content="summary_large_image"/>
<meta name="twitter:creator" content="@{{ config.twitter }}"/>

{% set socialImage = socialImage | default('/meta/cover.jpg') %}
{% set socialImageAlt = socialImageAlt | default('') %}
<meta property="og:image" content="{{ config.url }}{{ socialImage }}"/>
<meta name="twitter:image" content="{{ config.url }}{{ socialImage }}"/>
<meta property="og:image:alt" content="{{ socialImageAlt }}"/>
<meta name="twitter:image:alt" content="{{ socialImageAlt }}"/>

{% if config.monetisation %}
  <meta name="monetization" content="{{ config.author.monetisation }}">
{% endif %}

<meta name="generator" content="{{ eleventy.generator }}">
