<header class="sm:sticky sm:top-0 bg-white p-[.5rem]">
	<nav>
		<ul class="flex flex-wrap justify-center gap-x-[1rem] gap-y-[.5rem]" role="list">
			{% for item in navMain %}
				{% set isCurrent = true if page.url == item.url else false %}
				<li>
					<a
						class="no-underline"
						href="{{ item.url }}{% if isCurrent %}#top{% endif %}"
						{% if isCurrent %}aria-current="page"{% endif %}
					>
						{{ item.title }}
					</a>
				</li>
			{% endfor %}
		</ul>
	</nav>
</header>
