---
layout: base
---

<article class="section">
	<div class="container max-w-[70rem] md:flex md:gap-[2rem]">
		<nav
			class="shrink-0 md:fl-w-[230px@md,300px] pt-[16px] mdd:mb-[16px]"
			aria-label="documentation"
			x-data="{ show: false }"
			@click="show = false"
		>
			<button
				@click.stop="show = !show"
				:aria-expanded="show.toString()"
				class="md:hidden"
			>
				Toggle Navigation
			</button>
			<ul
				role="list"
				class="md:sticky md:top-[2rem] flow"
				:class="{ 'mdd:hidden': !show }"
			>
				{% for item in navDocs %}
					{% set isCurrent = true if page.url == item.url else false %}
					<li>
						<a
							class="no-underline"
							href="{{ item.url }}{% if isCurrent %}#top{% endif %}"
							{% if isCurrent %}aria-current="page"{% endif %}
						>
							{{ item.title }}
						</a>
						{% if item.subitems %}
							<ul role="list" class="pl-[16px]">
								{% for item in item.subitems %}
									<li>
										<a  class="no-underline" href="{{ item.url }}">{{ item.title }}</a>
									</li>
								{% endfor %}
							</ul>
						{% endif %}
					</li>
				{% endfor %}
			</ul>
		</nav>

		<div class="grow basis-0 min-w-0 flow">
			{{ content | safe }}
		</div>
	</div>
</article>
